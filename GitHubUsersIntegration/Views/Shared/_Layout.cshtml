<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GitHub Users</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <!--App name as a link to the home page -->
            @Html.ActionLink("GitHub Users", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <!-- Navigation Bar toggler -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navItems" aria-controls="navItems" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Items in Navigation Bar-->
            <div class="collapse navbar-collapse" id="navItems">
                <div class="navbar-nav">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="pageContainer">
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <span>A Web Application developed to integrate with the <a class="text-white" href="https://developer.github.com/v3/"><u>GitHub REST API</u></a> </span>
            <span class="float-right">Sohail Rahman - 2019</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customscripts")
    @RenderSection("scripts", required: false)
</body>
</html>